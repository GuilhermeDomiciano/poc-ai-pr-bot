# Required for CLI and HTTP
GITHUB_TOKEN=ghp_or_fine_grained_github_pat
AI_PROVIDER=openai

# Required when AI_PROVIDER=openai
OPENAI_API_KEY=put_your_key_here

# Required when AI_PROVIDER=anthropic
ANTHROPIC_API_KEY=put_your_key_here

# Required for CLI (`python main.py`)
GH_OWNER=your_user_or_org
GH_REPO=your_repo
ISSUE_NUMBER=1

# Optional
OPENAI_MODEL=gpt-4o-mini
ANTHROPIC_MODEL=claude-3-5-sonnet-latest
OPENAI_TIMEOUT_SECONDS=120
OPENAI_MAX_RETRIES=2
OPENAI_RETRY_BACKOFF_SECONDS=1.0
CORS_ALLOW_ORIGINS=http://localhost:5173,http://127.0.0.1:5173
GH_BASE_BRANCH=main
GIT_AUTHOR_NAME=AI Bot
GIT_AUTHOR_EMAIL=ai-bot@example.com
